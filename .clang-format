#  AfterClass:      true
#  AfterControlStatement: Always
#  AfterEnum:       false
#  AfterFunction:   true
#  AfterNamespace:  false
#  AfterObjCDeclaration: false
#  AfterStruct:     true
#  AfterUnion:      true
#  AfterExternBlock: false
#
#  BeforeCatch:     true
#  BeforeElse:      false
#  BeforeLambdaBody: false
#  BeforeWhile:     false
#  IndentBraces:    false
#  SplitEmptyFunction: true
